{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationDir": "./dist",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/components/**/*",
    "src/lib-entry.ts"
  ],
  "exclude": [
    "src/playground",
    "src/debug",
    "**/*.test.tsx",
    "**/*.test.ts",
    "node_modules"
  ]
}

